
@{
    Layout = "~/Views/Shared/_Layouthome.cshtml";

}


<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> Điện thoại </h3></div>
    <div class="container" style="background:white">
        @foreach (var item in Model)
        {

            <div class="col-md-2 col-lg-2 col-sm-2 col-xs-3 col-xl-2" style="background: #f7f3f2; border: 0px solid #ff6a00; margin: 10px; width: 200px !important; height: 400px; padding: 20px 5px 5px 5px ; margin: 10px; border-radius: 5px ">
                <div class="card mb-30">
                    <a class="card-img-tiles" href="@Url.Action("xemchitiet", new {@Masp=item.Masp })" data-abc="true">
                        <div class="inner" style="margin: 0; text-align: center !important">
                            <div class="main-img"><img src=@Url.Content(item.Anhbia) class="img-responsive" alt="" /></div>
                        </div>
                    </a>
                    <div class="card-body text-center">
                        <h4 class="card-title">@item.Tensp</h4>
                        <p class="text-muted">Giá: @item.Giatien</p>

                        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                        {
                            <input class="btn btn-primary" type="submit" value="Mua hàng" id="bgnGioHang" />

                        }
                        <a class="btn btn-outline-primary btn-sm" href="@Url.Action("xemchitiet", new {@Masp=item.Masp })" data-abc="true">View Products</a>

                    </div>
                </div>
            </div>

        }
    </div>
